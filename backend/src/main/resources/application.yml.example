spring:
  # ======== 数据库配置 (需本地启动 MySQL 8.0) ========
  datasource:
    driver-class-name: com.mysql.cj.jdbc.Driver
    # 请确保提前在本地或 Docker 中创建名为 resonance_db 的数据库
    url: jdbc:mysql://127.0.0.1:3306/resonance_db?useUnicode=true&characterEncoding=UTF-8&serverTimezone=Asia/Shanghai&allowPublicKeyRetrieval=true
    username: root          # 请替换为你的本地数据库账号
    password: your_password # 请替换为你的本地数据库密码

# 端口配置
server.port=8080


# ===============================
# Redis 缓存配置
# ===============================
# Redis 服务器所在的主机IP（本地开发就是 127.0.0.1）
spring.data.redis.host=127.0.0.1
# Redis 的默认端口号是 6379
spring.data.redis.port=6379
# Redis 的密码（如果没有设置密码，就留空）
spring.data.redis.password=
# 选择使用 Redis 的几号数据库（Redis 默认自带 16 个数据库，编号 0-15，我们用 0 号）
spring.data.redis.database=0